{
  "name": "contr.dev",
  "type": "module",
  "version": "0.6.0",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "release": "pnpm run lint && pnpm run typecheck && pnpm run build && changelogen --release --push",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "nuxt typecheck",
    "clean": "rm -rf .nuxt .output dist",
    "clean:modules": "rm -rf node_modules",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/ui": "3.0.0-alpha.10",
    "@nuxtjs/i18n": "^9.1.1",
    "nuxt": "^3.14.1592",
    "nuxt-zod-i18n": "^1.11.2",
    "octokit": "^4.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@hywax/tools-eslint": "^1.1.0",
    "@iconify-json/circle-flags": "^1.2.3",
    "@iconify-json/lucide": "^1.2.20",
    "changelogen": "^0.5.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "^5.7.2",
    "vue-tsc": "^2.1.10"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
